<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/list_item_home_image"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/list_item_home_text"
                android:layout_below="@+id/list_item_home_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/list_item_home_image"
                android:layout_alignRight="@+id/list_item_home_image"
                android:layout_alignEnd="@+id/list_item_home_image"
                android:layout_marginLeft="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.like.LikeButton
                app:icon_type="star"
                app:icon_size="16dp"
                android:id="@+id/star_button1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.like.LikeButton
                app:icon_type="star"
                app:icon_size="16dp"
                android:id="@+id/star_button2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.like.LikeButton
                app:icon_type="star"
                app:icon_size="16dp"
                android:id="@+id/star_button3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.like.LikeButton
                app:icon_type="star"
                app:icon_size="16dp"
                android:id="@+id/star_button4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.like.LikeButton
                app:icon_type="star"
                app:icon_size="16dp"
                android:id="@+id/star_button5"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>